{
        "layer": "top",
        "position": "top",
        "reload_style_on_change": true,
        "modules-left": ["hyprland/workspaces"],
        "modules-center": ["custom/screen-recorder", "custom/media"],
        "modules-right": [
            "group/expand",
            "bluetooth",
            "network",
            "pulseaudio",
            "tray",
            "custom/updates",
            "custom/idle-inhibitor",
            "clock",
            "custom/notification",
            "battery"
        ],


        "hyprland/workspaces": {
            "format": "{name}",
            "all-outputs": false,
            "show-special": false
        },
        "custom/notification": {
            "tooltip": true,
            "format": "{} {icon}",
            "format-icons": {
                "notification": "<span foreground='red'><sup></sup></span>",
                "none": "",
                "dnd-notification": "<span foreground='red'><sup></sup></span>",
                "dnd-none": "",
                "inhibited-notification": "<span foreground='red'><sup></sup></span>",
                "inhibited-none": "",
                "dnd-inhibited-notification": "<span foreground='red'><sup></sup></span>",
                "dnd-inhibited-none": ""
            },
            "return-type": "json",
            "exec-if": "which swaync-client",
            "exec": "timeout 5 swaync-client -swb",
            "on-click": "swaync-client -t -sw",
            "on-click-right": "swaync-client -d -sw",
            "escape": true
        },
        "clock": {
            "format": "{:%I:%M:%S %p} ",
            "interval": 1,   
            "tooltip-format": "<tt>{calendar}</tt>",
            "calendar": {
                "format": {
                    "today": "<span color='#fAfBfC'><b>{}</b></span>"
                }
            },
            "actions": {
                "on-click-right": "shift_down",
                "on-click": "shift_up"
            }
        },
        "network": {
            "format-wifi": "ó°–©",
            "format-ethernet":"ó°ˆ€",
            "format-disconnected": "ó°–ª",
            "tooltip-format-disconnected": "Error",
            "tooltip-format-wifi": "{essid} ({signalStrength}%) ï‡«",
            "tooltip-format-ethernet": "{ifname} ðŸ–§ ",
            "on-click": "wezterm nmtui"
        },
        "bluetooth": {
            "format-on": "ó°‚¯",
            "format-off": "BT-off",
            "format-disabled": "ó°‚²",
            "format-connected-battery": "{device_battery_percentage}%  ó°‚¯",
            "format-alt": "{device_alias} ó°‚¯",
            "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
            "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
            "tooltip-format-enumerate-connected": "{device_alias}\n{device_address}",
            "tooltip-format-enumerate-connected-battery": "{device_alias}\n{device_address}\n{device_battery_percentage}%",
            "on-click-right": "blueman-manager"
        }, 
        "battery": {
            "interval":30,
            "states": {
                "good": 95,
                "warning": 30,
                "critical": 20
            },
            "format": "{capacity}%  {icon}",
            "format-charging": "{capacity}% ó°‚„",
            "format-plugged": "{capacity}% ó°‚„ î¬­",
            "format-alt": "{time} {icon}",
            "format-icons": [
                "ó°»",
            "ó°¼",
            "ó°¾",
            "ó°‚€",
            "ó°‚‚",
            "ó°¹"
            ]
        },
        "custom/updates": {
            "format": "ó°…¢   {}",
            "interval": 28800,   
{{- if eq .chezmoi.osRelease.id "fedora" }}
            "exec": "timeout 30 sh -c 'dnf list --upgradable 2>/dev/null | tail -n +2 | wc -l'",
            "exec-if": "exit 0",
            "on-click": "wezterm sh -c 'sudo dnf upgrade; echo Done - Press enter to exit; read'; pkill -SIGRTMIN+8 waybar",
{{- else }}
            "exec": "timeout 30 sh -c 'if command -v yay >/dev/null 2>&1; then yay -Qu 2>/dev/null | wc -l; else checkupdates | wc -l; fi'",
            "exec-if": "exit 0",
            "on-click": "wezterm sh -c 'if command -v yay >/dev/null 2>&1; then yay -Syu; else sudo pacman -Syu; fi; echo Done - Press enter to exit; read'; pkill -SIGRTMIN+8 waybar",
{{- end }}
            "signal": 8,
            "tooltip": false
        },
        "custom/expand": {
            "format": "ï„„",
            "tooltip": false
        },
        "custom/endpoint":{
            "format": "|",
            "tooltip": false
        },
        "group/expand": {
            "orientation": "horizontal",
            "drawer": {
                "transition-duration": 600,
                "transition-to-left": true,
                "click-to-reveal": true
            },
            "modules": ["custom/expand", "custom/colorpicker","cpu","memory","temperature","custom/endpoint"]
        },
        "custom/colorpicker": {
            "format": "{}",
            "return-type": "json",
            "interval": "once",
            "exec": "timeout 5 ~/.config/waybar/scripts/colorpicker.sh -j",
            "on-click": "~/.config/waybar/scripts/colorpicker.sh",
            "signal": 1
        },
        "cpu": {
            "format": "ó°» ",
            "tooltip": true
        },
        "memory": {
            "format": "î¿…"
        },
        "temperature": {
            "critical-threshold": 80,
            "format": "ï‹‰"
        },
        "custom/media": {
            "return-type": "json",
            "max-length": 60,
            "escape": true,
            "exec": "timeout 3 $HOME/.config/waybar/mediaplayer.py 2> /dev/null",
            "exec-if": "timeout 2 playerctl status 2>/dev/null | grep -iq playing",
            "interval": 2
        },
        "pulseaudio": {
            "format": "{volume}%  {icon}",
            "format-bluetooth": "{volume}%  {icon}",
            "format-bluetooth-muted": " {icon}",
            "format-muted": "",
            "format-source": "{volume}% ",
            "format-source-muted": "",
            "format-icons": {
                "headphone": "",
                "hands-free": "",
                "headset": "",
                "phone": "",
                "portable": "",
                "car": "",
                "default": ["", "", ""]
            },
            "on-click": "pavucontrol",
            "on-click-right": "~/.config/swaync/scripts/volume-osd.sh mute"
        },
        "tray": {
            "icon-size": 18,
            "spacing": 6
        },
        "custom/idle-inhibitor": {
            "format": "{}",
            "return-type": "json",
            "exec": "$HOME/.config/waybar/scripts/logind-idle-monitor.sh",
            "on-click": "logind-idle-control toggle",
            "escape": false
        },
        "custom/screen-recorder": {
            "format": "{}",
            "return-type": "json",
            "interval": "once",
            "exec": "timeout 5 $HOME/scripts/screen-recorder/waybar-module.sh",
            "on-click": "$HOME/scripts/record",
            "signal": 10
        }
} 

