#!/bin/bash
# Modern screenshot workflow: wayshot + satty for annotation
# Pipe-based: capture → annotate → copy to clipboard

~/.cargo/bin/wayshot --stdout -s "$(slurp)" | \
  satty --filename - \
        --copy-command "wl-copy" \
        --early-exit \
        --default-hide-toolbars \
        --initial-tool arrow