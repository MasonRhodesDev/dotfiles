/* swaync style - Generated by theme switcher */
* {
  font-family: "SF Pro Text", sans-serif;
  font-weight: normal;
  font-size: 14px;
}

.control-center {
  box-shadow: 0 0 8px 0 rgba(0, 0, 0, 0.3);
  border-radius: 12px;
  margin: 18px;
  background-color: #fbf8ff;
  color: #1a1b23;
  padding: 14px;
}

.control-center .widget-title > label {
  color: #1a1b23;
  font-size: 1.3em;
}

.control-center .widget-title button {
  border-radius: 7px;
  color: #1a1b23;
  background-color: #e1e1f3;
  box-shadow: inset 0 1px 0 0 rgba(255, 255, 255, 0.02);
  border: 1px solid #757685;
}

.control-center .widget-title button:hover {
  box-shadow: inset 0 1px 0 0 rgba(255, 255, 255, 0.06);
  background-color: #3a6931;
  color: #ffffff;
}

.floating-notifications.background .notification-row .notification-background {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.3);
  border-radius: 12px;
  margin: 18px;
  background-color: #fbf8ff;
  color: #1a1b23;
  padding: 0;
}

.floating-notifications.background .notification-row .notification-background .notification {
  padding: 7px;
  border-radius: 12px;
}

.floating-notifications.background .notification-row .notification-background .notification .notification-content .summary {
  color: #1a1b23;
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 4px;
}

.floating-notifications.background .notification-row .notification-background .notification .notification-content .body {
  color: #444654;
  font-size: 15px;
}

.floating-notifications.background .notification-row .notification-background .close-button {
  margin: 7px;
  border-radius: 6.5px;
  background-color: #ba1a1a;
  color: #ffffff;
  box-shadow: 0 1px 7px 0 rgba(0, 0, 0, 0.1);
}

.control-center .notification-row .notification-background {
  border-radius: 7px;
  background-color: #e1e1f3;
  color: #1a1b23;
  margin-top: 14px;
}

.control-center .notification-row .notification-background .notification {
  padding: 7px;
  border-radius: 7px;
}

.control-center .notification-row .notification-background .notification .notification-content .summary {
  color: #1a1b23;
  font-size: 1.1em;
}

.control-center .notification-row .notification-background .notification .notification-content .body {
  color: #444654;
  font-size: 0.9em;
}

.widget-dnd > switch {
  border-radius: 8px;
  background: #e1e1f3;
  border: 1px solid #757685;
  box-shadow: none;
}

.widget-dnd > switch:checked {
  background: #3a6931;
  color: #ffffff;
}

/* Volume widget */
.widget-volume {
  background: #e1e1f3;
  color: #1a1b23;
  border-radius: 8px;
  padding: 8px;
}

.widget-volume scale {
  background: #e1e1f3;
}

.widget-volume scale trough {
  background: #757685;
  border-radius: 4px;
  min-height: 4px;
}

.widget-volume scale highlight {
  background: #3a6931;
  border-radius: 4px;
}

.widget-volume scale slider {
  background: #3a6931;
  border: 2px solid #fbf8ff;
  border-radius: 50%;
  min-width: 16px;
  min-height: 16px;
}

/* Media player widget */
.widget-mpris {
  background: transparent;
  color: #1a1b23;
  border-radius: 8px;
  padding: 8px;
}

.widget-mpris-player {
  background: transparent;
  color: #1a1b23;
  border-radius: 8px;
}

.widget-mpris-title {
  color: #1a1b23;
  font-weight: bold;
}

.widget-mpris-subtitle {
  color: #444654;
}

.widget-mpris button {
  background: transparent;
  color: #1a1b23;
  border: 1px solid #757685;
  border-radius: 6px;
  padding: 4px;
}

.widget-mpris button:hover {
  background: #3a6931;
  color: #ffffff;
}

/* Backlight widget */
.widget-backlight {
  background: #e1e1f3;
  color: #1a1b23;
  border-radius: 8px;
  padding: 8px;
}

.widget-backlight scale trough {
  background: #757685;
  border-radius: 4px;
  min-height: 4px;
}

.widget-backlight scale highlight {
  background: #3a6931;
  border-radius: 4px;
}

.widget-backlight scale slider {
  background: #3a6931;
  border: 2px solid #fbf8ff;
  border-radius: 50%;
  min-width: 16px;
  min-height: 16px;
}
