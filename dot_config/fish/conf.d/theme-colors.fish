# Fish shell colors generated from matugen
# Mode: dark

# Basic colors
set -g fish_color_normal '#e3e1ec'
set -g fish_color_command '#9fd491'
set -g fish_color_param '#e3e1ec'
set -g fish_color_redirection '#edb8cd'
set -g fish_color_comment '#8f909f'
set -g fish_color_error '#ffb4ab'
set -g fish_color_escape '#bbc3fa'
set -g fish_color_operator '#9fd491'
set -g fish_color_quote '#edb8cd'
